@model GadgetHub.WebUI.Models.CartViewModel

<h2>Shopping Cart</h2>

<table class="table">
	<thead>
		<tr>
			<th>Product</th>
			<th>Quantity</th>
			<th>Price</th>
			<th>Subtotal</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Cart.Items)
		{
			<tr>
				<td>@item.GadgetName</td>
				<td>@item.Quantity</td>
				<td>@item.Price.ToString("C")</td>
				<td>@(item.Quantity * item.Price).ToString("C")</td>
				<td>
					<a href="@Url.Action("RemoveFromCart", "Cart", new { gadgetId = item.GadgetId, returnUrl = Model.ReturnUrl })"
					   class="btn btn-danger">Remove</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<p class="fw-bold">Total: @Model.Cart.ComputeTotalValue().ToString("C")</p>

<a href="@Model.ReturnUrl" class="btn btn-secondary">Continue Shopping</a>

<a class="btn btn-success" href="@Url.Action("Checkout", "Cart")">Checkout Now</a>
