@model GadgetHub.Domain.Entities.Gadget

<div class="card m-2 p-2" style="width: 18rem;">
	<div class="card-body">
		<h5 class="card-title">@Model.Name</h5>
		<h6 class="card-subtitle mb-2 text-muted">@Model.Brand</h6>
		<p class="card-text">@Model.Description</p>

		<p class="text-success fw-bold">@String.Format("{0:C}", Model.Price)</p>

		<form action="@Url.Action("AddToCart", "Cart")" method="post">
			<input type="hidden" name="gadgetId" value="@Model.GadgetId" />
			<input type="hidden" name="returnUrl" value="@Request.Url.PathAndQuery" />
			<button type="submit" class="btn btn-primary">Add to Cart</button>
		</form>
	</div>
</div>
