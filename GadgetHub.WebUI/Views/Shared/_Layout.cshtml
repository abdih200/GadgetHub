@using GadgetHub.WebUI.Models
@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>GadgetHub - @ViewBag.Title</title>

	<!-- Bootstrap 5 CDN -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

	<!-- Custom CSS -->
	<link rel="stylesheet" href="~/Content/Site.css" />
	<link rel="stylesheet" href="~/Content/ErrorStyles.css" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
			<a class="navbar-brand" href="@Url.Action("List", "Gadget")">GadgetHub</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse justify-content-between" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link" href="@Url.Action("List", "Gadget")">Products</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="@Url.Action("Index", "Cart")">Cart</a>
					</li>
				</ul>

				<div class="d-flex">
					@Html.Action("Summary", "Cart")
				</div>
			</div>
		</nav>
	</header>

	<div class="container my-4">
		@RenderBody()
	</div>

	<footer class="bg-light text-center text-muted py-3">
		<div>&copy; 2025 - GadgetHub</div>
	</footer>

	<!-- Bootstrap 5 JS -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

	@RenderSection("scripts", required: false)
</body>
</html>
